<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Outdoorsy"
        tools:targetApi="31">

        <!-- MainActivity is the launcher and entry point of the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Outdoorsy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HomepageActivity, not a launcher but accessible after successful login -->
        <activity
            android:name=".ui.HomepageActivity"
            android:exported="true"
            android:theme="@style/Theme.Outdoorsy"/>

        <!-- RegisterActivity, used for new user registrations -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Outdoorsy"/>

    </application>

</manifest>

