<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage_nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Homepage Fragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.outdoorsy.fragments.HomepageFragment"
        tools:layout="@layout/fragment_homepage"
        android:label="Homepage">
        <action
            android:id="@+id/action_homepageFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_search"
            app:destination="@id/navigation_search" />
        <action
            android:id="@+id/action_homepageFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.outdoorsy.fragments.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <!-- Searched User Profile Fragment -->
    <fragment
        android:id="@+id/searchedUserProfileFragment"
        android:name="com.example.outdoorsy.fragments.UserProfileFragment"
        android:label="User Profile" />

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.outdoorsy.fragments.UserProfileFragment"
        android:label="User Profile">
        <argument
            android:name="userId"
            app:argType="string" />
        <action
            android:id="@+id/action_profileFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.outdoorsy.fragments.CameraFragment"
        android:label="Camera">
        <action
            android:id="@+id/action_cameraFragment_to_profileFragment"
            app:destination="@id/navigation_profile">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <!-- Profile Fragment -->

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.outdoorsy.fragments.ProfileFragment"
        android:label="Profile">

        <action
            android:id="@+id/action_profileFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment">
            <argument
                android:name="fullname"
                app:argType="string" />
            <argument
                android:name="imageUrl"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_profileFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />



    </fragment>



    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.outdoorsy.fragments.PostDetailsFragment"
        android:label="Post Details"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post"
            app:argType="com.example.outdoorsy.model.PostModel" />
        <action
            android:id="@+id/action_postDetailsFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_postDetailsFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>


    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.outdoorsy.fragments.EditPostFragment"
        android:label="Edit Post"
        tools:layout="@layout/fragment_edit_post">

        <!-- Arguments for editing a post -->
        <argument
            android:name="postId"
            app:argType="string" />
        <argument
            android:name="textContent"
            app:argType="string" />
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />


        <action
            android:id="@+id/action_editPostFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.outdoorsy.fragments.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <argument
            android:name="fullname"
            app:argType="string" />
        <argument
            android:name="imageUrl"
            app:argType="string" />
        <action
            android:id="@+id/action_editProfileFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <!-- Weather Fragment-->
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.outdoorsy.fragments.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/action_weatherFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>
